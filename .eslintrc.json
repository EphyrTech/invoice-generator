{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "react-hooks/exhaustive-deps": "warn",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "prefer-const": "error",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*", "**/*.test.*", "**/*.spec.*"],
      "rules": {
        "no-console": "off",
        "no-unused-vars": "off"
      }
    },
    {
      "files": ["**/pdf/**/*", "**/*pdf*"],
      "rules": {
        "jsx-a11y/alt-text": "off"
      }
    }
  ]
}
