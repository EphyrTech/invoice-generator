# Test runner Dockerfile
# This container runs all tests after the application is ready

FROM node:18-alpine

# Install dependencies for testing
RUN apk add --no-cache \
    curl \
    bash \
    git

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies (including dev dependencies for testing)
RUN npm ci

# Copy source code and tests
COPY . .

# Copy test scripts
COPY scripts/run-tests.sh ./scripts/run-tests.sh
COPY scripts/smoke-test.sh ./scripts/smoke-test.sh

# Make scripts executable
RUN chmod +x ./scripts/run-tests.sh ./scripts/smoke-test.sh

# Set environment variables for testing
ENV NODE_ENV=test
ENV APP_URL=http://app:3000
ENV DOCKER_CONTAINER=true

# Health check to ensure the container is ready
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD echo "Test runner is ready"

# Default command runs all tests
CMD ["./scripts/run-tests.sh"]
